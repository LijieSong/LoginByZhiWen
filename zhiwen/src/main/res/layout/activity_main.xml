<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:slj="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">
    <com.example.bjlz.loginbyzhiwen.views.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
   <Button
       android:visibility="gone"
       android:layout_marginTop="60dp"
       android:layout_gravity="center"
       android:id="@+id/btn_share"
       android:text="@string/share"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="10dp"
            android:id="@+id/tv_main_chek"
            android:text="1231231313131313131313131313131331313231313112312312313132131312313131313132131313213133"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content" />
    <TextView
        android:layout_margin="10dp"
        android:id="@+id/tv_main"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <com.example.bjlz.loginbyzhiwen.views.ViewPagerTab.ViewPagerIndeCator
        android:id="@+id/viewpagerindecator"
        android:orientation="horizontal"
        android:background="@color/gray"
        slj:visible_tab ="4"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </com.example.bjlz.loginbyzhiwen.views.ViewPagerTab.ViewPagerIndeCator>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
